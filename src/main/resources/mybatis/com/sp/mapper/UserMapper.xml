<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sp.test.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.sp.test.domain.User">
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="user_name" property="userName" jdbcType="VARCHAR" />
        <result column="status" property="status" jdbcType="VARCHAR" />
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
    </resultMap>
    <!-- 查询所有用户 -->
    <select id="findAllUser" resultMap="BaseResultMap">
		select * from tb_users
	</select>
    <!-- 更新用户状态 -->
    <update id="updateUserSts">
	    update tb_users set update_time=now(),status=#{status,jdbcType=VARCHAR} where id=#{id,jdbcType=BIGINT}
	</update>
    <delete id="deleteUser">
        delete from tb_users WHERE id=#{id,jdbcType=BIGINT}
    </delete>
    <select id="getByConditionPage" resultMap="BaseResultMap">
    select * from  tb_users
    <where>
        <if test="id !=null &amp;&amp; id>0">
            and id=#{id}
        </if>
        <if test="status !=null &amp;&amp;status!=''">
            and status=#{status}
        </if>
        <if test="showName !=null &amp;&amp; showName != '' ">
            and showName=#{showName}
        </if>
    </where>
    </select>
    <select id="selectByUser" resultMap="BaseResultMap">
        SELECT  * FROM  tb_users WHERE  user_name=#{userName}
    </select>


</mapper>